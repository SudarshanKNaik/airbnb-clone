<%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Here are our registered homes:
      </h2>
      <div class="grid grid-cols-1 gap-6">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-gray-100 p-4 rounded-lg shadow-md hover:shadow-lg transition duration-300 flex items-center">
            <img src="<%= home.photo || 'https://images.unsplash.com/photo-1564013799919-ab600027ffc6?w=400' %>" alt="Home photo" class="w-20 h-20 object-cover rounded-md mr-4 border border-gray-300" />
            <div>
              <h3 class="text-lg font-semibold text-gray-800 mb-1"><%= home.houseName %></h3>
              <p class="text-sm text-gray-600 mb-1">Location: <span class="font-medium"><%= home.Location %></span></p>
              <p class="text-sm text-gray-600 mb-1">Rating: <span class="font-medium"><%= home.Rating %></span></p>
              <p class="text-sm text-gray-600">Price: <span class="font-medium text-red-500">&#8377;<%= home.price %></span> / night</p>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>